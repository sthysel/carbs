#!/bin/env sh

report=$(acpi)

case $BLOCK_BUTTON in
    1) notify-send "$report" ;;
esac


quit_string="unavailable"

if [[ "$report" =~ $quit_string ]]
then
    echo D
fi

echo $report | cut -d " " -f3-5 | sed -e "s/,//g;s/Discharging/ğŸ”‹/;s/Charging/ğŸ”Œ/;s/Unknown/â“/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g"
