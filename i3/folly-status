general {
  colors = true
  interval = 4
}

order += "disk /"
order += "ethernet eth0"
order += "cpu_temperature 0"
order += "volume master"
order += "load"
order += "time"

cpu_temperature 0 {
  format = "CPU: %degrees °C"
  path = "/sys/devices/platform/coretemp.0/temp1_input"
  max_threshold = 75
}


wireless wlan0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet usb0 {
  # sudo setcap cap_net_admin=ep $(which i3status)
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}


battery 0 {
  last_full_capacity = true
  path = /sys/class/power_supply/BAT1/uevent
  format = "%status %percentage"
  integer_battery_capacity = true
  low_threshold = 15
  threshold_type = time
}

time {
  format = "%d.%m.%Y %H:%M"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%free"
}

disk "/home" {
  format = "%free"
}

volume master {
  format = "♪: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
