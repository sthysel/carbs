# sedge config file 

# some globals
StrictHostKeyChecking no

# variables
@set work-username tmeintjes

@key intersect 12:d5:b3:31:ec:95:89:ea:6c:60:6f:e5:ca:03:ff:64
@key work-ccg d0:bf:57:b6:0e:d7:20:53:3f:26:f2:fe:21:43:83:da
@key pawsey d0:bf:57:b6:0e:d7:20:53:3f:26:f2:fe:21:43:83:da
@key ccg-ops-old e6:dd:45:9e:af:65:c5:6a:b4:a5:25:15:c8:6a:91:73
@key ccg-ops 3a:ae:77:29:b4:9a:20:6a:32:45:4a:88:d6:e8:dd:7b


@HostAttrs trusted
    ForwardAgent yes

@HostAttrs slow-network
    Compression yes
    TCPKeepAlive yes
    ServerAliveInterval 60

Host staging
   Hostname = staging.ccgapps.com.au
   User = ubuntu
   IdentitiesOnly = yes
   @identity ccg-ops
   @is slow-network

Host ccg
   Hostname = ccg.ccgapps.com.au
   User = ubuntu
   IdentitiesOnly = yes
   @identity ccg-ops
   @is slow-network

Host scratch
   Hostname = brl-scratch.ccgapps.com.au
   User = ubuntu
   IdentitiesOnly = yes
   @is trusted
   @is slow-network
   @identity ccg-ops-old

Host docker1
   Hostname = docker1.ccgapps.com.au
   User = ubuntu
   IdentitiesOnly = yes
   @is trusted
   @identity ccg-ops-old

Host rdsi
    HostName rdsi-bpa-vm.intersect.org.au
    User thys.meintjes
    @identity intersect

Host minerva
    User <work-username>
    @identity work-ccg
    HostName ccg.murdoch.edu.au

Host nectar
    @identity work-ccg
    User ccg-user
    ForwardX11 yes
    @is trusted
    @is slow-network
    @via minerva

# current bpa controller vm on swiftn7
Host bpacontroller
    @identity work-ccg
    User bpaman
    ForwardX11 yes
    @is trusted
    @is slow-network
    @via nectar

# ccg cloud controllers 
@with i {0..1}
Host ccgcloud<i>
    HostName ccgcloud<i>.bpa.ccg 
    @identity work-ccg
    User ubuntu
    ForwardX11 yes
    @is trusted
    @is slow-network
    @via nectar
