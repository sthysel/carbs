{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "darkGray"
                },
                {
                    "type": "path",
                    "template": "{{.Path}}",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "darkGray",
                    "properties": {
                        "branch_max_length": 25,
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} "
                },
                {
                    "type": "project",
                    "style": "plain",
                    "foreground": "darkGray"
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "darkGray"
                }
            ]
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#cd5e42",
                    "style": "plain",
                    "template": "\ue3bf ",
                    "type": "root"
                },
                {
                    "foreground": "white",
                    "style": "plain",
                    "template": "$",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ]
}
